<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application themeObj. -->
    <style name="Base.Theme.TIKIClientLibrary" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light themeObj here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TIKIClientLibrary" parent="Base.Theme.TIKIClientLibrary" />

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_tint</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">
            @style/Theme.AppCompat.Translucent.WindowTransition
        </item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.AppCompat.Translucent.WindowTransition">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_in</item>
    </style>
</resources>